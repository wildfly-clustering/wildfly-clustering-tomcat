<infinispan xmlns="urn:infinispan:config:15.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="urn:infinispan:config:15.2 https://infinispan.org/schemas/infinispan-config-15.2.xsd">
	<cache-container name="default" default-cache="sessions">
		<transport/>
		<distributed-cache-configuration name="sessions">
			<locking acquire-timeout="15000"/>
			<transaction mode="BATCH" locking="PESSIMISTIC"/>
		</distributed-cache-configuration>
	</cache-container>
</infinispan>

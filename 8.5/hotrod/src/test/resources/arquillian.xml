<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<arquillian xmlns="http://jboss.org/schema/arquillian"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    <group qualifier="tomcat" default="true">
        <container qualifier="tomcat-1">
            <configuration>
                <property name="catalinaHome">${project.build.directory}/tomcat-1</property>

                <property name="jmxPort">8089</property>
                <property name="bindHttpPort">8080</property>
                <property name="javaVmArguments">${jdk.runtime.args} -Dtomcat.management.port=8005 -Dtomcat.http.port=8080 -Dtomcat.https.port=8443 -Dcom.sun.management.jmxremote.port=8089</property>

                <property name="user">admin</property>
                <property name="pass">admin</property>
            </configuration>
        </container>
        <container qualifier="tomcat-2">
            <configuration>
                <property name="catalinaHome">${project.build.directory}/tomcat-2</property>

                <property name="jmxPort">8189</property>
                <property name="bindHttpPort">8180</property>
                <property name="javaVmArguments">${jdk.runtime.args} -Dtomcat.management.port=8105 -Dtomcat.http.port=8180 -Dtomcat.https.port=8543 -Dcom.sun.management.jmxremote.port=8189</property>

                <property name="user">admin</property>
                <property name="pass">admin</property>
            </configuration>
        </container>
    </group>
</arquillian>